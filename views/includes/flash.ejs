<%if(success && success.length){%>
   <div class="alert alert-success alert-dismissible fade show col-12 col-md-6 offset-md-3" role="alert">

    <%=success%>

    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
   </div>
    <%}%>

    <%if(failure && failure.length){%>
        <div class="alert alert-danger alert-dismissible fade show col-12 col-md-6 offset-md-3" role="alert">
     
         <%=failure%>
         
         <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </div>
         <%}%>