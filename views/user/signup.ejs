<% layout('layouts/boilerplate') -%>

<div class="row mb-4">
     <div class="col-12 col-md-6 offset-md-3 px-2 px-md-0">
        <div class="mt-3 mb-4">
             <h3 class="text-primary text-center text-md-start">Signup for TranquilStay</h3>
            
            <form action="/signup" method="post" class="needs-validation" novalidate>
                 <div class="mb-3">
                    <label for="username" class="form-label" >Username</label>
                    <input type="text" class="form-control" id="username" name="username" required>
                    <div class="valid-feedback">Looks good</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>

                <!-- Mobile pe full width button -->
                <button class="btn btn-primary w-100 w-md-auto">Signup</button>
            </form>
        </div>
    </div>
</div>