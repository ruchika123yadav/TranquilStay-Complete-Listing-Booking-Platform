<% layout('layouts/boilerplate') -%>

<body>
<div class="row mb-4">
      <div class="col-6 mt-3 mb-4 offset-3"> 
    <h2><b><%=listing.title%></b></h2>
     </div>
     <div class="col-6 offset-3">
     <div class="card" style="border: none;">
        <img src="<%=listing.image%>" class="card-img-top" style="height: 45vh;" alt="image">
        <div class="card-body">
          <p class="card-text"> 
            <%=listing.description%><br>
            <b>&#8377;<%=listing.price.toLocaleString("en-IN")%></b><br>
            <%=listing.location%><br>
            <%=listing.country%><br>
        </p>
        </div>
      </div>
</div>

<div class="btns">
  <a class="btn btn-primary col-1 offset-3" style="background-color: #fe4248;" href="/listing/<%=listing._id%>/edit">EDIT</a>
<form method="POST" action="/listing/<%=listing._id%>/delete?_method=DELETE">
    <button class="btn btn-dark  offset-5">DELETE</button>
</form>
</div>

<!-- REVIEW SECTION -->
<hr class="col-6 offset-3 mb-2 mt-4">
<div class="col-6 offset-3 mb-3 mt-3">
  <h4>Leave a Comment</h4>
  <form method="post" action="/listing/<%=listing._id%>/review">
  <label class="form-label" for="rating">Rating</label>
  <input class="form-control form-range " min="1" max="5" id="rating" type="range" name="Review[rating]">
   <br>
   <label class="form-label" for="comment">Comment</label>
   <textarea class="form-control  " id="comment" type="range" name="Review[comment]" cols="30" rows="3"></textarea>
   <button class="mb-3 mt-3 btn btn-outline-dark">Submit</button>
  </form>
</div>

</div>

 </body>
 